<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane id="stackPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox id="searchHbox" alignment="TOP_CENTER" spacing="10.0" StackPane.alignment="TOP_CENTER">
         <children>
            <Button id="backBtn" layoutX="179.0" layoutY="15.0" mnemonicParsing="false" style="-fx-background-color: lightblue;" text="&lt;" />
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <TextField id="searchTextField" promptText="Enter a product name" />
                  <GridPane id="suggestionGridPane" alignment="CENTER">
                     <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                  </GridPane>
               </children>
            </VBox>
            <Button id="searchBtn" mnemonicParsing="false" text="Search" />
            <Button id="logoutBtn" mnemonicParsing="false" style="-fx-background-color: coral;" text="Logout" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</StackPane>
