<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Your Products" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="40.0" />
         </BorderPane.margin>
      </Text>
   </top>
   <center>
      <HBox alignment="TOP_CENTER" spacing="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox id="currentProductVBox" prefHeight="200.0" prefWidth="100.0" style="-fx-border-width: 1px; -fx-border-style: solid;">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Current Products">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
               </children>
               <HBox.margin>
                  <Insets bottom="100.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" style="-fx-border-width: 1px; -fx-border-style: solid; -fx-max-height: 100px; -fx-max-width: 100px;">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add New Product">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Product">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Text>
                        <ComboBox id="productComboBox" prefWidth="150.0" promptText="Select" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="21.0" layoutY="63.0" spacing="5.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Stock">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Text>
                        <TextField id="stockTextField" text="1" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Price ($)">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Text>
                        <TextField id="priceTextField" text="0" />
                     </children>
                  </HBox>
                  <Button id="addBtn" mnemonicParsing="false" style="-fx-background-color: green;" text="Add" textFill="WHITE">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </center>
   <right>
      <VBox maxHeight="500.0" minHeight="0.0" prefHeight="500.0" spacing="5.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
